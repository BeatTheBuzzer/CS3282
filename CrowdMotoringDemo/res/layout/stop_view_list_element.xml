<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/transport_name"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
    	android:textAlignment="center"
    	android:textColor="#FFFFFF"
        android:textSize="24dp" />
    
    <LinearLayout
    	android:id="@+id/arrival_time_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="0dp" >
    
    	<TextView
        	android:id="@+id/arrival_time_label"
    		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Arriving"
    		android:textAlignment="center"
    		android:textColor="#FFFFFF"
        	android:textSize="24dp" />
    
    	<TextView
        	android:id="@+id/arrival_time_text"
    		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text=""
    		android:textAlignment="center"
    		android:textColor="#FFFFFF"
        	android:textSize="24dp" />
    </LinearLayout>
    
    <LinearLayout
    	android:id="@+id/crowdedness_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="0dp" >
    
    	<TextView
        	android:id="@+id/crowdedness_info"
    		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text=""
    		android:textAlignment="center"
    		android:textColor="#FFFFFF"
        	android:textSize="24dp" />
    
    	<LinearLayout
    		android:id="@+id/crowdedness_button_layout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="#00000000"
        	android:orientation="horizontal"
        	android:padding="0dp" >
        	
    	    	<Button
            		android:id="@+id/crowdedness_button_yes"
            		android:layout_width="match_parent"
            		android:layout_height="40dp"
            		android:text="Yes"
            		android:textAlignment="center"
    				android:textColor="#FFFFFF"
            		android:textSize="20dp"/>
    	    	<Button
            		android:id="@+id/crowdedness_button_no"
            		android:layout_width="match_parent"
            		android:layout_height="40dp"
            		android:text="No"
            		android:textAlignment="center"
    				android:textColor="#FFFFFF"
            		android:textSize="20dp"/>
    	    
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
