<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="0dp" >
        
        <TextView
    	    android:id="@+id/transportInfoText"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="#888888"
        	android:text=""
    		android:textAlignment="center"
    		android:textColor="#FFFFFF"
            android:textSize="24dp" />
    	
    	<TextView
    	    android:id="@+id/crowdednessRealTimeText"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text=""
    		android:textColor="#333333"
            android:textSize="16dp" />
    	
    	<TextView
    	    android:id="@+id/crowdednessHistoricalText"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text=""
    		android:textAlignment="center"
    		android:textColor="#333333"
            android:textSize="16dp" />
    	
    	<LinearLayout
        	android:id="@+id/postCrowdednessLinearLayout"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:background="#FFFFFF"
        	android:orientation="vertical"
        	android:padding="0dp" >
        	
    	    <LinearLayout
        		android:id="@+id/postCrowdednessDisplayLinearLayout"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_alignParentLeft="true"
        		android:background="#FFFFFF"
        		android:orientation="horizontal"
        		android:padding="0dp" >
        	
    	    	<TextView
    	    		android:id="@+id/postCrowdednessArrowText"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="\u25BC"
    				android:textAlignment="center"
    				android:textColor="#333333"
            		android:textSize="20dp" />
    	
    			<TextView
    	    		android:id="@+id/postCrowdednessText"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="Post crowdedness info"
    				android:textAlignment="center"
    				android:textColor="#333333"
            		android:textSize="20dp" />
    	
    		</LinearLayout>
    		
    	    <Button
    	    	android:id="@+id/crowdednessTrueButton"
     			android:layout_height="match_parent"
     			android:layout_width="wrap_content"
     			android:visibility="gone"
     			android:textColor="#333333"
     			android:text="Currently it is crowded"/>
    	
    		<Button
    	    	android:id="@+id/crowdednessFalseButton"
     			android:layout_height="match_parent"
     			android:layout_width="wrap_content"
     			android:visibility="gone"
     			android:textColor="#333333"
     			android:text="Currently it is uncrowded"/>
    	</LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
